ENDOFEND

if ($^O eq 'os2') {
    $config_txt .= uncomment <<'ENDOFSET';
#    my %preconfig;
#    if ($OS2::is_aout) {
#        my ($value, $v) = $Config_SH_expanded =~ m/^used_aout='(.*)'\s*$/m;
#        for (split ' ', $value) {
#            ($v) = $Config_SH_expanded =~ m/^aout_$_='(.*)'\s*$/m;
#            $preconfig{$_} = $v eq 'undef' ? undef : $v;
