# pad.c
use feature 'state';
use warnings 'shadow' ;
my $x ;
our $x ;
state $x;
my $y = our $y ;
my $p = state $p ;
package X ;
our $p ;
package main ;
no warnings 'shadow' ;
my $z ;
our $z ;
my $t = our $t ;
my $z = state $z;
my $q;
state $q;
package X ;
our $q ;
EXPECT
