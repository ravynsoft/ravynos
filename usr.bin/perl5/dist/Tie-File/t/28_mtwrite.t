sub mkrand {
  my $len = shift;
  srand $len;
  my @c = ('a' .. 'z', 'A' .. 'Z', 0..9, $:);
  my $d = "";
  $d .= $c[rand @c] until length($d) >= $len;
  substr($d, $len) = ""; # chop it off to the proper length
  $d;
}

sub try {
  push @TRIES, [@_] if @_ == 3;

  open F, '>', $file or die "Couldn't open file $file: $!";
  binmode F;
  print F $oldfile;
  close F;
