subdir = Etc
dir_top = ..
SUBDIRS =

@VERSION_MK@

# source/build directories
VPATH           = @srcdir@
sdir            = @srcdir@
sdir_top        = @top_srcdir@
INSTALL         = @INSTALL@

@DEFS_MK@

# ========== DEPENDENCIES FOR BUILDING ==========

all: FAQ FAQ.html

FAQ: $(sdir)/FAQ.yo
	$(YODL2TXT) -o FAQ.txt $< && mv FAQ.txt $@

FAQ.html: $(sdir)/FAQ.yo
	$(YODL2HTML) -o $@ $<

# ========== DEPENDENCIES FOR CLEANUP ==========

@CLEAN_MK@

mostlyclean-here:
	rm -f FAQ.html

distclean-here:
	rm -f Makefile

realclean-here:
	rm -f FAQ

# ========== DEPENDENCIES FOR MAINTENANCE ==========

@CONFIG_MK@
