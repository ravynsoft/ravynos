>0
>local unset_test
>setme
>0

 # Depends on zsh-5.0.9 typeset keyword
 typeset -a array_test=(top level)
 () {
  local -Pa array_test=(in function)
  () {
   private array_test
   typeset +m array_test
  }
  print $array_test
 }
 print $array_test
