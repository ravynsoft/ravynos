_perforce_cmd_istat() {
  _arguments -s : \
    '-a[show status of integration in both directions]' \
    '-c[assume cache is stale]' \
    '-r[show status of integration from parent]' \
    '-s[show cached state without refreshing stale data]' \
    '1::stream: '
}


