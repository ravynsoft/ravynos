  _arguments -s : \
    '-d[delete counter]' \
    '-f[set or delete internal counter]' \
    '-i[increment counter by 1]' \
    '-m[allow multiple operations]' \
    '1:counter:_perforce_counters' \
    '(-d -i)2::numeric value:_perforce_counter_values'
}


