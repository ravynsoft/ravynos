# This file gets used if it is in /usr/local/etc/xdg/breezerc
# KWin does not automatically reload if it is changed, so kwin_x11
# needs to be restarted for changes to take effect.
# https://github.com/KDE/breeze/blob/master/kdecoration/breezesettingsdata.kcfg
# describes the keys and values.

[Common]
ShadowSize=ShadowLarge
ShadowStrength=128
OutlineCloseButton=false

[Style]
MnemonicsMode=MN_NEVER
ScrollBarAddLineButtons=1
ScrollBarSubLineButtons=1
TabBarDrawCenteredTabs=true
ViewDrawFocusIndicator=false
WindowDragMode=WD_NONE

[Windeco]
ButtonSize=ButtonSmall
TitleAlignment=AlignCenterFullWidth
DrawSizeGrip=true
DrawTitleBarSeparator=false
BorderSize=BorderNone
# The following settings do not exist in the regular Breeze but in
# https://github.com/tsujan/BreezeEnhanced/blob/master/breezesettingsdata.kcfg
MacOSButtons=false
BackgroundGradientIntensity=30
DrawTitleBarSeparator=true
TitleBarFont=Nimbus Sans,10,-1,5,75,0,0,0,0,0,Bold
